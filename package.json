{
  "name": "hugo-theme-bones",
  "version": "1.0.0",
  "description": "Skeleton of a Hugo theme.",
  "main": "index.js",
  "watch": {
    "theme": {
      "patterns": ["sass"],
      "extensions": "scss"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch-theme": "npm run theme; npm-watch theme",
    "theme": "dart-sass sass/styles.scss static/css/styles.css; uglifycss static/css/styles.css > static/css/styles.min.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Auspicus/hugo-theme-bones.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Auspicus/hugo-theme-bones/issues"
  },
  "homepage": "https://github.com/Auspicus/hugo-theme-bones#readme",
  "dependencies": {
    "dart-sass": "^1.10.3",
    "hugo-bin": "^0.29.0",
    "npm-watch": "^0.3.0",
    "uglifycss": "0.0.29"
  }
}
